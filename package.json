	"version": "1.0.0",
	"description": "Repository to store Typescript Design Patterns",
	"main": "index.js",
	"scripts": {
		"lint:fix": "prettier --config .prettierrc 'src/**/*.ts' --write --check",
		"execute": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify $1",
		"adapter-v1": "npm run execute src/adapter/v1/index.ts",
		"builder-v1": "npm run execute src/builder/v1/index.ts",
		"command-v1": "npm run execute src/command/v1/index.ts",
		"facade-v1": "npm run execute src/facade/v1/index.ts",
		"factory-v1": "npm run execute src/factory/v1/index.ts",
		"mediator-v1": "npm run execute src/mediator/v1/index.ts",
		"result-v1": "npm run execute src/result/v1/index.ts",
		"result-v2": "npm run execute src/result/v2/index.ts",
		"singleton-v1": "npm run execute src/singleton/v1/index.ts",
		"strategy-v1": "npm run execute src/strategy/v1/index.ts",
		"specification-v1": "npm run execute src/specification/v1/index.ts"
	},
	"repository": {
		"type": "git",
